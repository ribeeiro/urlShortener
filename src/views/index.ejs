<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/main.css" rel="stylesheet">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <title>yoUrl</title>
</head>
<body>
    <div class="container mt-5">
        <div class="col-9 mx-auto">
            <form action="/scripts/shortenUrl" method="POST">
                <div class="input-group mb-3">
                    <input type="text" name="long" id="long" class="form-control" value="<%= message.length > 0 ? message : 'Digite a url aqui' %>" onclick="this.select()">
                    <button class="input-group-text btn btn-success" >Shorten</button>
                </div>
            </form>

        </div>
        <% if(path_data){%>
            <div class="col-9 mx-auto">
            <% path_data.forEach(path =>{%>
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="card-title"><%= path.dataValues.title%> </h5>
                        <i><a href="<%= path.dataValues.long_uri%>" class="card-link"><%= path.dataValues.long_uri%></a></i>
                    </div>
                    <div class="card-body">
                        <a href="http://<%= path.dataValues.short_path%>" class="card-link"><%= path.dataValues.short_path%></a>
                    </div>
                </div>
                    <%})%>
                <%}%>
            </div>
            
    </div>

</body>
<script src="js/bootstrap.min.js"></script>